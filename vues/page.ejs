<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta charset="UTF-8" />

        <!--On charge un petit icone-->
        <link
            rel="shortcut icon"
            href="https://cdn3.iconfinder.com/data/icons/chooseanycolor/128/ico-512.png"
            type="image/x-icon"
        />

        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!--STYLES-->
        <link rel="stylesheet" href="styles/styles.css" />
        <link rel="stylesheet" href="styles/header.css" />
        <link rel="stylesheet" href="styles/footer.css" />
        <link rel="stylesheet" href="styles/main.css" />
        <link rel="stylesheet" href="styles/adaptative.css" />
        <link rel="stylesheet" href="styles/modulaire.css">

        <!--POLICE D'ECRITURE 'Roboto'-->
        <link rel="preconnect" href="https://fonts.gstatic.com" />
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"
            rel="stylesheet"
        />

        <!--Script correspondant au convertisseur sélectionné-->
        <% if (typeof convertisseur != 'undefined') { %>
        <script src="convertisseurs/<%= convertisseur.adresse %>" type="module"></script>
        <% } %>

        <!--On charge JQuery-->
        <script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"
        ></script>


        <script>        
        window.version = "<%-version%>"
        </script>

    </head>
    <body>
        <header>
            <nav class="header-nav">
                <div  class="header-nav-list card-container">

                    <% convertisseurs.forEach((conv)=>{ %>
                        <a
                        href="<%=conv.adresse%>"
                        style="text-decoration: none"
                        class="card <%= conv.adresse == convertisseur.adresse ? "selected-card" : ""%>"
                        >
                        <div>
                            <%= conv.nom.replace(/^\w/, c => c.toUpperCase());%>
                        </div>
                        </a>
                    <% }) %>
                </div>
                <div id="theme-switch-ctr">
                    <label for="theme-switch">Dark theme : </label>
                    <input id="theme-switch" type="checkbox">
                </div>
            </nav>

        </header>
        <main id="main">

        </main>

    </body>
        <script src="dark_theme_script.js" defer></script>

</html>
