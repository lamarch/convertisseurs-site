<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta charset="UTF-8" />

        <!--On charge un petit icone-->
        <link
            rel="shortcut icon"
            href="favicon.png"
            type="image/x-icon"
        />

        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!--STYLES-->
        <link rel="stylesheet" href="styles/styles.css" />

        <!--POLICE D'ECRITURE 'Roboto'-->
        <link rel="preconnect" href="https://fonts.gstatic.com" />
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"
            rel="stylesheet"
        />

        <!--Script correspondant au convertisseur sélectionné-->
        <% if (typeof convertisseur != 'undefined') { %>
        <script src="convertisseurs/<%= convertisseur.adresse %>" type="module"></script>
        <% } %>

        <!--On charge JQuery-->
        <script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"
        ></script>

        <script src="scripts/dark_theme_script.js" defer></script>
        <script src="scripts/screen_size.js"></script>

        <script>        
        window.version = "<%-version%>"
        </script>

    </head>
    <body>
        <header>
            <nav class="menu-list vertical-card-container">

                <% convertisseurs.forEach((conv)=>{ %>
                    <a
                    href="<%=conv.adresse.slice(0, -3)%>"
                    style="text-decoration: none"
                    class="card menu-item <%= conv.adresse == convertisseur.adresse ? "selected-card" : ""%>"
                    >
                    <div>
                        <%= conv.nom.replace(/^\w/, c => c.toUpperCase());%>
                    </div>
                    </a>
                <% }) %>
            </nav>
            <div id="theme-switch-ctr">
                <label for="theme-switch">Dark theme : </label>
                <input id="theme-switch" type="checkbox">
            </div>
        </header>
        <main id="main">

            

        </main>

    </body>

</html>
