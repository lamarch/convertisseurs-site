    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach Nodemon",
            "request": "attach",
            "port": 3000,
            "address": "localhost",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "PORT": "80"
            },
            "program": "${workspaceFolder}\\server.js"
        }
    ]
}